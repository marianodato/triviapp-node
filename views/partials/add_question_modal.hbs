<link rel="stylesheet" href="/stylesheets/modal.css">

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Add Question</h4>
</div>

<div class="modal-body">

    <form class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-4 control-label">Question: </label>
            <div class="col-sm-6">
                <input id="questionInput" onKeyUp="onNewQuestionInfoChanged()" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">Option 0: </label>
            <div class="col-sm-6">
                <input id="questionOptionAInput" onKeyUp="onNewQuestionInfoChanged()" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-4 control-label">Option 1: </label>
            <div class="col-sm-6">
                <input id="questionOptionBInput" onKeyUp="onNewQuestionInfoChanged()" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-4 control-label">Option 2: </label>
            <div class="col-sm-6">
                <input id="questionOptionCInput" onKeyUp="onNewQuestionInfoChanged()" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-4 control-label">Correct Option: </label>
            <div class="col-sm-6">
                <input id="correctOptionInput" placeholder="0, 1, 2" onKeyUp="onNewQuestionInfoChanged()" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-4 control-label">Time should show: </label>
            <div class="col-sm-6">
                <input id="timeShouldShowInput" type="number" value="10" class="form-control">
            </div>
        </div>

    </form>

</div>

<div class="modal-footer">
    <button disabled onclick="saveQuestion()" class="btn save-button" id="btnAddQuestion">Save</button>
</div>